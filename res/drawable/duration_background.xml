<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:yt="http://schemas.android.com/apk/res-auto">
    <item yt:state_live="false" yt:state_upcoming="false">
        <shape android:shape="rectangle">
            <solid android:color="#d9000000" />
            <stroke android:width="1.0dip" android:color="#4dffffff" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item yt:state_live="true">
        <shape android:shape="rectangle">
            <solid android:color="#b2e62117" />
            <stroke android:width="1.0dip" android:color="#4dffffff" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item yt:state_upcoming="true">
        <shape android:shape="rectangle">
            <solid android:color="#b2000000" />
            <stroke android:width="1.0dip" android:color="#4dffffff" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
</selector>